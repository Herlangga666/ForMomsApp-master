<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bar">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Setting Profile"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="123dp"
            android:layout_marginBottom="10dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-thin"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bar"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/txt_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama :"
            android:textColor="#449def"/>

        <androidx.cardview.widget.CardView
            android:layout_below="@id/txt_nama"
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Nama"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txt_tinggi"
            android:layout_below="@id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tinggi :"
            android:textColor="#449def" />
        <androidx.cardview.widget.CardView
            android:id="@+id/tinggi"
            android:layout_below="@id/txt_tinggi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Tinggi"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txt_berat"
            android:layout_below="@id/tinggi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berat :"
            android:textColor="#449def"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/berat"
            android:layout_below="@id/txt_berat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Berat"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txt_tanggal"
            android:layout_below="@id/berat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Lahir :"
            android:textColor="#449def"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/tanggal_lahir"
            android:layout_below="@id/txt_tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Tanggal Lahir"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:id="@+id/simpan"
            android:layout_below="@id/tanggal_lahir"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Simpan"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</RelativeLayout>